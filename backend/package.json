{
    "name": "backend",
    "version": "1.0.0",
    "description": "SupplySight GraphQL API",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
      "build": "tsc && cp -r src/schema dist/",
      "start": "node dist/index.js",
      "dev": "ts-node-dev --respawn --esm --transpile-only src/index.ts",
      "watch": "tsc -w",
      "generate": "graphql-codegen --config codegen.ts"
    },
    "dependencies": {
      "@apollo/server": "^5.0.0",
      "graphql": "^16.8.1"
    },
    "devDependencies": {
      "@graphql-codegen/cli": "^5.0.7",
      "@types/node": "^20.8.10",
      "ts-node-dev": "^2.0.0",
      "typescript": "^5.3.3"
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }